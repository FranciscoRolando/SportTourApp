<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/nav_header_layout_paddingTop"
    android:paddingBottom="@dimen/nav_header_layout_paddingBottom"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_layout_height">

    <ImageView
        android:src="@drawable/sporttour_icon"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_email"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_email_textSize"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>